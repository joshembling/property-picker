{
  "manifest_version": 3,
  "name": "Property Picker (Zoopla & Rightmove)",
  "description": "Affordability information on all listings. Currently available on Zoopla and Rightmove.",
  "version": "3.23",
  "host_permissions": ["https://zoopla.co.uk/*", "https://rightmove.co.uk/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon_purple.png"
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": [
        "https://www.zoopla.co.uk/*",
        "https://www.rightmove.co.uk/*"
      ],
      "js": ["edit.js"],
      "css": ["edit.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
